<UserControl x:Class="XMLConversion.AdvanceControl.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLConversion.AdvanceControl"
             mc:Ignorable="d" 
             Height="32" Width="190" >
    <Grid x:Name="MainGrid">
        <ComboBox x:Name="colorComboBox" ItemsSource="{Binding Path=FontColorList}" SelectedValue="{Binding Path=SelectedFontColor,Mode=TwoWay}"  IsSynchronizedWithCurrentItem="True">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <TextBlock Width="20" Height="20" Margin="5" Background="{Binding Name}"/>
                            <TextBlock Text="{Binding Path=Name}" Margin="5" />
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
            
    </Grid>
</UserControl>
