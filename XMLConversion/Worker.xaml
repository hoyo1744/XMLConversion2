<UserControl x:Class="XMLConversion.Worker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLConversion"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="beforeTextBlock" Grid.Row="0" Text="변환 전" Background="Red"/>
        <TextBox x:Name="beforeTextBox" Grid.Row="1" Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
        <Border Grid.Row="2" Background="Black"/>
        <TextBlock x:Name="afterTextBlock" Grid.Row="3" Text="변환 후" Background="Red"/>
        <TextBox x:Name="afterTextBox" Grid.Row="4" IsReadOnly="True" FontStyle="Italic"/>
    </Grid>
</UserControl>
