<UserControl x:Class="XMLConversion.Worker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XMLConversion"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="10"/>
            <RowDefinition Height="10"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="beforeTextBox" Grid.Row="0" Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>
        <Border Grid.Row="1" Background="Black"/>
        <StackPanel Orientation="Horizontal">
            
        </StackPanel>
        <TextBox x:Name="afterTextBox" Grid.Row="3" IsReadOnly="True"/>
    </Grid>
</UserControl>
